{
    "manifest_version": 3,
    "name": "SmartShift",
    "version": "0.1.0",
    "action": {
        "default_title": "SmartShift",
        "default_popup": "popup/index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.rshift.jp/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.rshift.jp/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}